datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model UserMusicListening {
  id           String      @id @default(cuid())
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt
  isListening  Boolean?
  timestamp    DateTime?
  user         User?       @relation(fields: [userId], references: [id])
  userId       String?
  musicTrack   MusicTrack? @relation(fields: [musicTrackId], references: [id])
  musicTrackId String?
}

model UserLocation {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  longitude Float?
  latitude  Float?
  user      User?    @relation(fields: [userId], references: [id])
  userId    String?
}

model MusicTrack {
  id                  String               @id @default(cuid())
  createdAt           DateTime             @default(now())
  updatedAt           DateTime             @updatedAt
  title               String?
  artist              String?
  album               String?
  duration            Int?
  spotifyUri          String?
  appleMusicUri       String?
  userMusicListenings UserMusicListening[]
}

model User {
  id                  String               @id @default(cuid())
  createdAt           DateTime             @default(now())
  updatedAt           DateTime             @updatedAt
  firstName           String?
  lastName            String?
  username            String               @unique
  email               String?              @unique
  password            String
  roles               Json
  userLocations       UserLocation[]
  userMusicListenings UserMusicListening[]
}
